pipeline {
    agent { label 'node' }

    tools {
        maven 'Maven-Manual'
        jdk 'Java_17'
    }

    stages {
        stage('Debug Info') {
            steps {
                sh 'echo $PATH && which mvn && mvn -v'
            }
        }

        stage('Pull Stage') {
            steps {
                git 'https://github.com/vaishalijadhav2418/jenkins-vaish.git'
                sh 'ls'
                sh 'pwd'
                echo 'Pull stage succeed'
            }
        }

        stage('Build Stage') {
            steps {
                sh 'mvn clean package'
                echo 'Build Stage succeed'
            }
        }

        stage('Test Stage') {
            steps {
                sh '''
                    mvn sonar:sonar \
                    -Dsonar.projectKey=onlinebookstore \
                    -Dsonar.host.url=http://13.201.121.148:9000 \
                    -Dsonar.login=7df55e3797483e62578eb700fef2a8495bd8310c
                '''
                echo 'Testing done'
            }
        }

        stage('Deploy Stage') {
            steps {
                echo 'Deployment Done'
            }
        }
    }
}
